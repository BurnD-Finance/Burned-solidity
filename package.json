{
  "name": "burnd-solidity",
  "version": "1.0.0",
  "description": "Burnd",
  "main": "hardhat.config.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npx hardhat test --network localhost",
    "test:coverage": "npx hardhat coverage",
    "lint": "npm run lint:sol && npm run lint:ts",
    "lint:sol": "solhint \"contracts/**/*.sol\"",
    "lint:ts": "eslint . --ext .ts",
    "lint:fix": "npm run lint:fix-sol && npm run lint:fix-ts",
    "lint:fix-sol": "npx prettier --write 'contracts/**/*.sol'",
    "lint:fix-ts": "eslint . --ext .ts --fix",
    "build": "npx hardhat compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BurnedToken/Burned-solidity.git"
  },
  "keywords": [
    "erc20",
    "crypto",
    "solidity",
    "defi",
    "deflationary"
  ],
  "author": "BurnD",
  "license": "ISC",
  "dependencies": {
    "@openzeppelin/contracts": "^4.0.0",
    "@uniswap/v2-periphery": "^1.1.0-beta.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/test-environment": "^0.1.9",
    "@openzeppelin/test-helpers": "^0.5.10",
    "@typechain/ethers-v5": "^6.0.5",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "chalk": "^4.1.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.0",
    "hardhat": "^2.1.2",
    "hardhat-typechain": "^0.3.5",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.8",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.3",
    "typescript": "^4.2.4"
  },
  "bugs": {
    "url": "https://github.com/BurnedToken/Burned-solidity/issues"
  },
  "homepage": "https://github.com/BurnedToken/Burned-solidity#readme"
}
